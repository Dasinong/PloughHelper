<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/mvc/spring-mvc-3.0.xsd">


	<!-- <mvc:annotation-diven></mvc:annotation-diven> -->
	<bean
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters">
			<list>
				<bean
					class="org.springframework.http.converter.StringHttpMessageConverter">
					<property name="supportedMediaTypes">
						<list>
							<value>text/plain;charset=UTF-8</value>
						</list>
					</property>
				</bean>
				<bean
					class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter" />
			</list>
		</property>
	</bean>
	<!-- Root Context: defines shared resources visible to all other web components -->
	<import resource="/database/DataSource.xml"></import>
	<import resource="/database/Hibernate.xml"></import>
	<import resource="/beans/ModelBeans.xml"></import>
	<import resource="/beans/FacadeBeans.xml"></import>

		<!-- HandlerMapping -->  
	<bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>  
   
	<!-- HandlerAdapter -->  
	<bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter"/> 
	
	<!-- ViewResolver -->  
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">  
    	<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>  
    	<property name="prefix" value="/WEB-INF/jsp/"/>  
    	<property name="suffix" value=".jsp"/>  
	</bean>  
	
	<!-- 处理器 -->  
	<bean name="/weatherAlert" class="com.dasinong.ploughHelper.mvc.WeatherAlertController"/>
	<bean name="/baike" class="com.dasinong.ploughHelper.BaiKeJspController"/>
	
	<bean id="myJob" class="com.dasinong.ploughHelper.task.SampleTask" />

	<bean name="startQuertz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
			<!--  
				<ref bean="myJobTrigger" />
				<ref bean="myJobTrigger1" />
				<ref bean="myJobTrigger2" />
				<ref bean="myJobTrigger3" />
				<ref bean="myJobTrigger4" />
			-->
			</list>
		</property>
	</bean>

	<bean id="myJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="myJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0 0/1 * * ?</value>
		</property>
	</bean>

	<bean id="myJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="myJob" />
		</property>
		<property name="targetMethod">
			<value>work</value>
		</property>
	</bean>

	<bean id="myJob1" class="com.dasinong.ploughHelper.weather.All24h" />


	<bean id="myJobTrigger1"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="myJobDetail1" />
		</property>
		<property name="cronExpression">
			<value>0 0 0/1 * * ?</value>
		</property>
	</bean>

	<bean id="myJobDetail1"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="myJob1" />
		</property>
		<property name="targetMethod">
			<value>updateContent</value>
		</property>
	</bean>


	<bean id="myJob2" class="com.dasinong.ploughHelper.weather.All7d" />


	<bean id="myJobTrigger2"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="myJobDetail2" />
		</property>
		<property name="cronExpression">
			<value>0 0 0/1 * * ?</value>
		</property>
	</bean>

	<bean id="myJobDetail2"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="myJob2" />
		</property>
		<property name="targetMethod">
			<value>updateContent</value>
		</property>
	</bean>
	
	
	<bean id="myJob3" class="com.dasinong.ploughHelper.weather.All7dHum" />

	<bean id="myJobTrigger3"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="myJobDetail3" />
		</property>
		<property name="cronExpression">
			<value>0 0 0/1 * * ?</value>
		</property>
	</bean>

	<bean id="myJobDetail3"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="myJob3" />
		</property>
		<property name="targetMethod">
			<value>updateContent</value>
		</property>
	</bean>
	

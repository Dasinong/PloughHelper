<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.Location" table="location" catalog="ploughHelper">
        <id name="locationId" type="java.lang.Long">
            <column name="locationId" />
            <generator class="identity" />
        </id>
        <property name="locationName" type="string">
            <column name="locationName" length="30" not-null="true" unique="true" />
        </property>
        <set name="fields" table="field" inverse="true" lazy="false" fetch="select">
        	<key>
        		<column name="locationId" not-null="true" />
        	</key>
        	<one-to-many class="com.dasinong.ploughHelper.model.Field"></one-to-many>
        </set>
        
        <set name="natDiss" table="location_natDis" cascade="all" inverse="false" lazy="false">
        	<key column = "locationId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.NatDis" column="natDisId"></many-to-many>
        </set>
        <set name="petDiss" table="location_petDis" cascade="all" inverse="false" lazy="false">
        	<key column = "locationId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.PetDis" column="petDisId"></many-to-many>
        </set>
        
        <property name="other" type="string">
            <column name="other" length="100" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
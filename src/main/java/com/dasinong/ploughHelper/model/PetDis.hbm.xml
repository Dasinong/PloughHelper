<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.PetDis" table="petDis" catalog="ploughHelper">
        <id name="petDisId" type="java.lang.Long">
            <column name="petDisId" />
            <generator class="identity" />
        </id>
        <property name="petDisName" type="string">
            <column name="petDisName" length="30" not-null="true" unique="true" />
        </property>

        <set name="subStages" table="subStage_petDis" cascade="all" inverse="true">
        	<key column = "petDisId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.SubStage" column="SubStageId"></many-to-many>
        </set>
        <set name="locations" table="location_petDis" cascade="all" inverse="true">
        	<key column = "petDisId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.Location" column="LocationId"></many-to-many>
        </set>
        
    </class>
</hibernate-mapping>
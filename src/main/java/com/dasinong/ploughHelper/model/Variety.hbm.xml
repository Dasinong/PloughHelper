<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.Variety" table="variety" catalog="ploughHelper">
        <id name="varietyId" type="java.lang.Long">
            <column name="varietyId" />
            <generator class="identity" />
        </id>
        <property name="varietyName" type="string">
            <column name="varietyName" length="30" not-null="true" unique="true" />
        </property>
        <set name="fields" table="field" inverse="true" lazy="false" fetch="select">
        	<key>
        		<column name="varietyId" not-null="true" />
        	</key>
        	<one-to-many class="com.dasinong.ploughHelper.model.Field"></one-to-many>
        </set>
        <set name="subStages" table="variety_subStage" cascade="save-update" inverse="true" lazy="false">
        	<key>
        		<column name="varietyId" not-null="true" />
        	</key>
        	<many-to-many class="com.dasinong.ploughHelper.model.SubStage" column="subStageId"></many-to-many>
        </set>
        
        <many-to-one name="crop" class="com.dasinong.ploughHelper.model.Crop" fetch="select">
        	<column name="cropId" not-null="true"></column>
        </many-to-one>
        
        <map name="qualityItemValues" cascade="all">
        	<key column="varietyId"/>
        	<index column="qualityItemId" type="java.lang.Long"></index>
        	<one-to-many class="com.dasinong.ploughHelper.model.QualityItemValue"></one-to-many>
        </map>
        <property name="type" type="string">
            <column name="type" length="10"/>
        </property>
        <property name="genoType" type="string">
            <column name="genoType" length="10"/>
        </property>
        <property name="maturityType" type="string">
            <column name="maturityType" length="20"/>
        </property>
        <property name="suitableArea" type="string">
            <column name="suitableArea" length="40"/>
        </property>
        <property name="totalAccumulatedTempNeeded" type="int">
            <column name="totalAccumulatedTempNeeded" length="10"/>
        </property>
        <property name="fullCycleDuration" type="int">
            <column name="fullCycleDuration" length="10"/>
        </property>
        <property name="typicalYield" type="int">
            <column name="typicalYield" length="10"/>
        </property>
        <property name="seedUnit" type="string">
            <column name="seedUnit" length="20"/>
        </property>
        <property name="nationalStandard" type="string">
            <column name="nationalStandard" length="20"/>
        </property>
    </class>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.Variety" table="variety" catalog="ploughHelper">
        <id name="varietyId" type="java.lang.Long">
            <column name="varietyId" />
            <generator class="identity" />
        </id>
        <property name="varietyName" type="string">
            <column name="varietyName" length="30" not-null="true" unique="true" />
        </property>
        <set name="fields" table="field" inverse="true" lazy="false" fetch="select">
        	<key>
        		<column name="varietyId" not-null="true" />
        	</key>
        	<one-to-many class="com.dasinong.ploughHelper.model.Field"></one-to-many>
        </set>
        <set name="subStages" table="variety_subStage" cascade="save-update" inverse="true" lazy="false">
        	<key>
        		<column name="varietyId" not-null="true" />
        	</key>
        	<many-to-many class="com.dasinong.ploughHelper.model.SubStage" column="subStageId"></many-to-many>
        </set>
        
        <many-to-one name="crop" class="com.dasinong.ploughHelper.model.Crop" fetch="select">
        	<column name="cropId" not-null="true"></column>
        </many-to-one>
        
        <property name="other" type="string">
            <column name="other" length="100" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
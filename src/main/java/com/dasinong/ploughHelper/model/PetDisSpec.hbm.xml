<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.PetDisSpec" table="petDisSpec" catalog="ploughHelper">
        <id name="petDisSpecId" type="java.lang.Long">
            <column name="petDisSpecId" />
            <generator class="identity" />
        </id>
        <property name="petDisSpecName" type="string">
            <column name="petDisSpecName" length="30" not-null="true" unique="true" />
        </property>

        <set name="subStages" table="subStage_petDisSpec" cascade="all" inverse="true">
        	<key column = "petDisSpecId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.SubStage" column="SubStageId"></many-to-many>
        </set>
        <set name="locations" table="location_petDisSpec" cascade="all" inverse="true">
        	<key column = "petDisSpecId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.Location" column="LocationId"></many-to-many>
        </set>
        <set name="crops" table="crop_petDisSpec" cascade="all" inverse="true">
        	<key column = "petDisSpecId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.Crop" column="cropId"></many-to-many>
        </set>
        
        <set name="petSolus" table="petSolu" inverse="false" lazy="false" fetch="select">
        	<key>
        		<column name="petDisSpecId" not-null="true" />
        	</key>
        	<one-to-many class="com.dasinong.ploughHelper.model.PetSolu"></one-to-many>
        </set>
        
        <property name="type" type="string">
            <column name="type" length="10"/>
        </property>
        <property name="alias" type="string">
            <column name="alias" length="10"/>
        </property>
        <property name="severity" type="int">
            <column name="severity" length="10"/>
        </property>
        <property name="commonImpactonYield" type="int">
            <column name="commonImpactonYield" length="10"  />
        </property>
        <property name="maxImpactonYield" type="int">
            <column name="maxImpactonYield" length="10"/>
        </property>
        <property name="preventionorRemedy" type="string">
            <column name="preventionorRemedy" length="10"/>
        </property>
        <property name="indvidualorGroup" type="string">
            <column name="indvidualorGroup" length="10"/>
        </property>
        <property name="impactedArea" type="string">
            <column name="impactedArea" length="10"/>
        </property>
        <property name="color" type="string">
            <column name="color" length="10"/>
        </property>     
        <property name="shape" type="string">
            <column name="shape" length="10"/>
        </property>  
        <property name="description" type="string">
            <column name="description" length="200"/>
        </property> 
        <property name="sympthon" type="string">
            <column name="sympthon" length="200"/>
        </property>     
        <property name="forms" type="string">
            <column name="forms" length="200"/>
        </property>     
        <property name="habits" type="string">
            <column name="habits" length="200"/>
        </property>     
        <property name="rules" type="string">
            <column name="rules" length="200"/>
        </property>     
        <property name="pictureIds" type="string">
            <column name="pictureIds" length="200"/>
        </property>      
    </class>
</hibernate-mapping>
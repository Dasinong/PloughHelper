<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.PetDisSpec" table="petDisSpec" catalog="ploughHelper">
        <id name="petDisSpecId" type="java.lang.Long">
            <column name="petDisSpecId" />
            <generator class="identity" />
        </id>
        <property name="petDisSpecName" type="string">
            <column name="petDisSpecName" length="30" not-null="true" unique="true" />
        </property>

        <set name="subStages" table="subStage_petDisSpec" cascade="all" inverse="true">
        	<key column = "petDisSpecId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.SubStage" column="SubStageId"></many-to-many>
        </set>
        <set name="locations" table="location_petDisSpec" cascade="all" inverse="true">
        	<key column = "petDisSpecId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.Location" column="LocationId"></many-to-many>
        </set>
        
    </class>
</hibernate-mapping>
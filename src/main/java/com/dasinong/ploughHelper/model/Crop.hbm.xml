<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.Crop" table="crop" catalog="ploughHelper">
        <id name="cropId" type="java.lang.Long">
            <column name="cropId" />
            <generator class="identity" />
        </id>
        <property name="cropName" type="string">
            <column name="cropName" length="30" not-null="true" unique="true" />
        </property>
        <set name="varieties" table="variety" inverse="true" lazy="false" fetch="select">
        	<key>
        		<column name="cropId" not-null="true" />
        	</key>
        	<one-to-many class="com.dasinong.ploughHelper.model.Variety"></one-to-many>
        </set>
        <set name="qualityItems" table="qualityItem" inverse="true" lazy="false" fetch="select">
        	<key>
        		<column name="cropId" not-null="true" />
        	</key>
        	<one-to-many class="com.dasinong.ploughHelper.model.QualityItem"></one-to-many>
        </set>
        <property name="other" type="string">
            <column name="other" length="100" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
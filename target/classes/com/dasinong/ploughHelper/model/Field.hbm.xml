<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.Field" table="field" catalog="ploughHelper">
        <id name="fieldId" type="java.lang.Long">
            <column name="fieldId" />
            <generator class="identity" />
        </id>
        <property name="fieldName" type="string">
            <column name="fieldName" length="30" not-null="true" unique="true" />
        </property>
        <property name="isActive" type="java.lang.Boolean">
            <column name="isActive" />
        </property>
        <many-to-one name="variety" class="com.dasinong.ploughHelper.model.Variety" fetch="select">
        	<column name="varietyId" not-null="true"></column>
        </many-to-one>
        <many-to-one name="user" class="com.dasinong.ploughHelper.model.User" fetch="select">
        	<column name="userId" not-null="true"></column>
        </many-to-one>
        <many-to-one name="location" class="com.dasinong.ploughHelper.model.Location" fetch="select">
        	<column name="locationId" not-null="false"></column>
        </many-to-one>
        
        <map name="tasks" cascade="all" lazy="false" inverse="false">
         	<key column="fieldId"/>
        	<index column="taskId" type="java.lang.Long"></index>
        	<one-to-many class="com.dasinong.ploughHelper.model.Task"></one-to-many>
        </map>
        <map name="petDiss" cascade="all" lazy="false" inverse="false">
        	<key column="fieldId"/>
        	<index column="petDisId" type="java.lang.Long"></index>
        	<one-to-many class="com.dasinong.ploughHelper.model.PetDis"></one-to-many>
        </map>
        <map name="natDiss" cascade="all" lazy="false" inverse="false">
        	<key column="fieldId"/>
        	<index column="natDisId" type="java.lang.Long"></index>
        	<one-to-many class="com.dasinong.ploughHelper.model.NatDis"></one-to-many>
        </map>
        <property name="currentStageID" type="java.lang.Long">
            <column name="currentStageID" length="10" />
        </property>
        <property name="startDate" type="timestamp">
            <column name="startDate"/>
        </property>
        <property name="endDate" type="timestamp">
            <column name="endDate"/>
        </property>
        <property name="yield" type="java.lang.Long">
            <column name="yield" length="10"/>
        </property>
        <property name="area" type="double">
        	<column name="area" length="10"></column>
        </property>
        <property name="seedortrans" type="java.lang.Boolean" >
        	<column name="seedortrans"></column>
        </property>
    </class>
</hibernate-mapping>
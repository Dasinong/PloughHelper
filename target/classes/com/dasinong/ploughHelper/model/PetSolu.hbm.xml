<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.dasinong.ploughHelper.model.PetSolu" table="petSolu" catalog="ploughHelper">
        <id name="petSoluId" type="java.lang.Long">
            <column name="petSoluId" />
            <generator class="identity" />
        </id>
        <property name="petSoluDes" type="string">
            <column name="petSoluDes" length="300" not-null="true"/>
        </property>
        <many-to-one name="petDisSpec" class="com.dasinong.ploughHelper.model.PetDisSpec" fetch="select">
        	<column name="petDisSpecId" not-null="true"></column>
        </many-to-one>
        <set name="cPProducts" table="petSolu_CPProduct" cascade="all" inverse="false" lazy="false">
        	<key column = "petSoluId"></key>
        	<many-to-many class="com.dasinong.ploughHelper.model.CPProduct" column="cPProductId"></many-to-many>
        </set>
        
        <property name="isCure" type="java.lang.Boolean">
            <column name="isCure" />
        </property>
        <property name="isCPSolu" type="java.lang.Boolean">
            <column name="isCPSolu" />
        </property>
    </class>
</hibernate-mapping>